<style>
    th{
        font-weight: bold;
        padding: 5px;
    }

    td{
        padding-right: 10px;
        padding: 5px;
    }
    a{
        padding-right: 10px;
    }
    body{
        padding: 20px;
    }
    .btn-group{
        padding: 10px;
    }
    .btn.btn-success{
        margin:10px;
    }
</style>

<html>

    <body>

        <h1>Too Many Cars</h1>

        <div class="btn-group">
            <a href="/" class="btn btn-primary" >Home</a>
            <a href="/cars" class="btn btn-primary">Cars</a>
          </div> 

        <table class="table table-striped">
            <tr>
                <th>User</th>
                <th>Title</th>
                <th>Description</th>
                <th>Type</th>
                <th>Piority</th>
                <th>Status</th>
                <th></th>
            </tr>

            <% cars.forEach( (car) => { %>
                <tr>
                    <td>
                        <%= car.userID %>
                    </td>
                    <td>
                        <%= car.title %>
                    </td>
                    <td>
                        <%= car.desc %>
                    </td>
                    <td>
                        <%= car.type %>
                    </td>
                    <td>
                        <%= car.prio %>
                    </td>
                    <td>
                        <%= car.status %>
                    </td>
                    <td>
                        <a href="/cars/<%= car.id %>" class="btn btn-info btn-sm">Show</a>
                        <a href="/cars/<%= car.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/cars/<%= car.id %>/delete" class="btn btn-danger btn-sm">Kill</a>
                    </td>
                </tr>
                
           <% }); %>
        </table>

    </body>

    <a href="/cars/new" class="btn btn-success">New</a>

    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> 

</html>