<html>
    <head>
        <style>
            body {
                padding:20px;
            }
            .btn-group{
                padding:10px;
            }
        </style>
    </head>
    
    <body>
        <h1>Cars Home :)</h1>

        <div class="btn-group">
            <a href="/" class="btn btn-primary" >Home</a>
            <a href="/cars" class="btn btn-primary">Cars</a>
        </div> 

        <h2>Most Recent Cars</h2>

        <table class="table table-striped">
            <tr>
                <th>User</th>
                <th>Title</th>
                <th>Description</th>
                <th>Type</th>
                <th>Piority</th>
                <th>Status</th>
                <th></th>
            </tr>
            
            <% cars.forEach( (car) => { %>
                <tr>
                    <td>
                        <%= car.userID %>
                    </td>
                    <td>
                        <%= car.title %>
                    </td>
                    <td>
                        <%= car.desc %>
                    </td>
                    <td>
                        <%= car.type %>
                    </td>
                    <td>
                        <%= car.prio %>
                    </td>
                    <td>
                        <%= car.status %>
                    </td>
                    <td>
                        <a href="/cars/<%= car.id %>" class="btn btn-info btn-sm">Show</a>
                    </td>
                </tr>
           <% }); %>
        </table>


    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> 

    </body>
</html>