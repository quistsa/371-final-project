<html>

    <head>
        <style>
            .label {
                display: inline-block;
                width: 6em;
                font-weight: bold;
            }
            body{
                padding:20px;
            }
            .btn-group{
                padding:10px;
            }
            .title{
                font-weight: bold;
            }
        </style>
    </head>

    <body>

        <h1>Car Details</h1>

        <div class="btn-group">
            <a href="/" class="btn btn-primary" >Home</a>
            <a href="/cars" class="btn btn-primary">Cars</a>
        </div> 

        <table class="table table-striped w-25">
            <tr>
            <td class="title">User:</td>
            <td><%= car.userID %></td>
            </tr>

            <tr>
                <td class="title">Title:</td>
                <td><%= car.title %></td>
            </tr>
                
            <tr>
                <td class="title">Description:</td>
                <td><%= car.desc %></td>
            </tr>
            
            <tr>
                <td class="title">Issue Type:</td>
                <td><%= car.type %></td>
            </tr>

            <tr>
                <td class="title">Priority:</td>
                <td><%= car.prio %></td>
            </tr>
        
            <tr>
                <td class="title">Status:</td>
                <td><%= car.status %></td>
            </tr>
        </table>

        <div class="btn-group">
            <a class="btn btn-info btn-sm" href="/cars">Back</a>
            <a class="btn btn-warning btn-sm" href="/cars/<%= car.id %>/edit">Edit</a>
            <a class="btn btn-danger btn-sm" href="/cars/<%= car.id %>/delete">Kill</a>
        </div>

    </body>

    <!-- Latest compiled and minified CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> 

</html>