<html>

    <head>
        <style>
            .label {
                display: inline-block;
                width: 6em;
                font-weight: bold;
            }
            body{
                padding:20px;
            }
            .btn-group{
                padding:10px;
            }
            .title{
                font-weight: bold;
            }
        </style>
    </head>

    <body>

        <h1>Car Details</h1>

        <div class="btn-group">
            <a href="/" class="btn btn-primary">Home</a>
            <a href="/cars" class="btn btn-primary">Cars</a>
        </div> 

        <table class="table table-striped w-25">
            <tr>
            <td class="title">Make:</td>
            <td><%= car.make %></td>
            </tr>

            <tr>
                <td class="title">Model:</td>
                <td><%= car.model %></td>
            </tr>
                
            <tr>
                <td class="title">Year:</td>
                <td><%= car.year %></td>
            </tr>
            
            <tr>
                <td class="title">Current Mileage:</td>
                <td><%= car.mileage %></td>
            </tr>

            <tr>
                <td class="title">Miles at Last Oil Change:</td>
                <td><%= car.lastOil %></td>
            </tr>
        
            <tr>
                <td class="title">Miles at Last Tire Rotation:</td>
                <td><%= car.lastTire %></td>
            </tr>
        </table>

        <div class="btn-group">
            <a class="btn btn-info btn-sm" href="/cars">Back</a>
            <a class="btn btn-warning btn-sm" href="/cars/<%= car.id %>/edit">Edit</a>
            <a class="btn btn-danger btn-sm" href="/cars/<%= car.id %>/delete">Remove</a>
        </div>

    </body>

    <!--Bootstrap Imports-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script> 

</html>